<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/small_buttomine"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/shebei_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="123"
            android:textColor="#303f9f"
            android:textSize="15sp" 
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/manu_class"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:singleLine="true"
            android:text="123"
            android:textColor="#141414"
            android:textSize="15sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/manu_name"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginLeft="4dp"
        android:gravity="left"
        android:text="123"
        android:textColor="#141414"
        android:textSize="13sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="电话:"
            android:textColor="#141414"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/dianhua"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="123"
            android:textColor="#141414"
            android:singleLine="true"
            android:textSize="10sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="传真:"
            android:textColor="#141414"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/chuanzhen"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="123"
            android:textColor="#141414"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="网址:"
            android:textColor="#141414"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/wangzhi"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="123"
            android:textColor="#141414"
            android:textSize="10sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="邮箱:"
            android:textColor="#141414"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/youxiang"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginLeft="4dp"
            android:gravity="left"
            android:text="123"
            android:textColor="#141414"
            android:textSize="10sp" />
    </LinearLayout>

</LinearLayout>